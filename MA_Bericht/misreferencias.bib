@article{narayanan_radar_2015,
	title = {Radar micro-{Doppler} signatures of various human activities},
	volume = {9},
	issn = {1751-8784},
	doi = {10.1049/iet-rsn.2015.0173},
	abstract = {This study presents the results of the authors' experimental investigation into the radar micro-Doppler signatures (MDS) of various human activities both in free-space and through-wall environments. The collection of MDS signatures was divided into three categories: stationary, forward-moving, and multi-target. Each category of MDS signatures encompassed a variety of movements associated with it, adding up to a total of 18 human movements. Using a 6.5-GHz C-band coherent radar, the MDS of six human subjects were gathered in free-space and through-wall environments. The MDS for these cases were analysed in detail and the general properties of the signatures were related to their associated phenomenological characteristics. Based upon the MDS, features for designing detectors and classifiers of human targets performing such movements are recommended. In the case of multiple human targets in the radar field of view, it was found that it is possible to distinguish these targets from the MDS under certain circumstances, but not under others.},
	number = {9},
	journal = {Sonar Navigation IET Radar},
	author = {Narayanan, R. M. and Zenaldin, M.},
	year = {2015},
	keywords = {Doppler radar, C-band coherent radar, forward-moving category, frequency 6.5 GHz, MDS signatures, multitarget category, phenomenological characteristics, radar detection, radar micro-Doppler signatures, stationary category, target classifiers, target detection},
	pages = {1205--1215},
	file = {IEEE Xplore Abstract Record:C\:\\Users\\z003vaft\\Zotero\\storage\\ZURD39BT\\citations.html:text/html;Narayanan_2015_Radar micro-Doppler signatures of various human activities.pdf:C\:\\Users\\z003vaft\\Desktop\\Zotero\\Narayanan_2015_Radar micro-Doppler signatures of various human activities.pdf:application/pdf}
