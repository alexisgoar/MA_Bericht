	year = {2009},
	keywords = {Doppler radar, microDoppler signatures, signal classification, boxing, crawling, decision tree structure, feature extraction, gait analysis, human activity classification, Human activity classification, micro-doppler, running, sitting, spectrogram, support vector machine, support vector machines, through-wall, walking},
	pages = {1328--1337},
	file = {IEEE Xplore Abstract Record:C\:\\Users\\z003vaft\\Zotero\\storage\\2JXA54BB\\4801689.html:text/html;Kim_2009_Human Activity Classification Based on Micro-Doppler Signatures Using a Support Vector Machine.pdf:C\:\\Users\\z003vaft\\Desktop\\Zotero\\Kim_2009_Human Activity Classification Based on Micro-Doppler Signatures Using a Support Vector Machine.pdf:application/pdf}
